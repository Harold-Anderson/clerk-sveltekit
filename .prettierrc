{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "all",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte"],
	"pluginSearchDirs": ["."],
	"overrides": [
		{ "files": "*.svelte", "options": { "parser": "svelte" } },
		{
			"files": "package.json",
			"options": {
				"printWidth": 100,
				"tabWidth": 2,
				"trailingComma": "none",
				"useTabs": false
			}
		}
	]
}
